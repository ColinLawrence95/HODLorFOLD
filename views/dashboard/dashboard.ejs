<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Dashboard</title>
        <!-- Include Chart.js -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <!-- Include chartjs-adapter-date-fns (for date handling in Chart.js) -->
        <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>
    </head>
    <body>
        <%- include('../partials/_navbar.ejs') %> 
        <h1>Dashboard</h1>
        <form action="/dashboard/<%= user._id %>" method="GET">
            <input
                type="text"
                name="coinSearch"
                id="coinSearch"
                required
                placeholder="Search Coin"
                value="<%= coinSearch || '' %>"
            />
            <button type="submit">Search</button>
        </form>
        <h2><%= coinSearch %> Price</h2>
        <p>Current Price: $<%= coinData[coinSearch].usd %></p>

        <h3>Price History Graph</h3>
        <canvas id="priceChart" width="600" height="200"></canvas>

        <script>
            // Embed the historical data directly into the script
            const historicalData = <%- JSON.stringify(historicalData) %>;
            // Now wait until the document is fully loaded
            document.addEventListener('DOMContentLoaded', function() {
                if (historicalData.length > 0) {
                    // Prepare labels and data for the chart
                    const labels = historicalData.map(data => new Date(data.timestamp));  // Directly use Date objects
                    const prices = historicalData.map(data => data.price);
                    // Create the chart
                    const ctx = document.getElementById('priceChart').getContext('2d');
                    const priceChart = new Chart(ctx, {
                        type: 'line', // Line chart for price over time
                        data: {
                            labels: labels, // Time labels as Date objects
                            datasets: [{
                                label: 'Price (USD)',
                                data: prices, // Coin prices
                                borderColor: "rgba(171, 36, 36)",
                                backgroundColor: "rgba(171, 36, 36, 0.2)",
                                fill: true,
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                x: {
                                    type: 'time', // Use time scale for x-axis
                                    time: {
                                        unit: 'minute', // You can adjust this depending on the granularity
                                        tooltipFormat: 'll HH:mm', // Customize how the tooltip shows time
                                    },
                                    title: {
                                        display: true,
                                        text: 'Time'
                                    }
                                },
                                y: {
                                    title: {
                                        display: true,
                                        text: 'Price (USD)'
                                    }
                                }
                            }
                        }
                    });
                } else {
                    console.log("No historical data available for the graph.");
                }
            });
        </script>
    </body>
</html>
